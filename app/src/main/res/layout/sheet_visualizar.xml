<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="22dp"
    android:layout_marginTop="46dp"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingHorizontal="30dp"
    >

    <TextView
        android:id="@+id/txtTituloVisualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/fazer_compras"
        android:textColor="@color/pretinho"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:rotation="90"
        android:src="@drawable/horizontal_dashed_line"
        app:layout_constraintEnd_toStartOf="@+id/btnEditar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/btnEditar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@color/white"
        android:src="@drawable/ic_editar"
        app:layout_constraintBottom_toTopOf="@+id/txtConteudoVisualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:id="@+id/txtFazer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_fazer"
        android:textColor="@color/cinza_texto"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloVisualizar"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/txtConteudoVisualizar"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@color/white"
        android:gravity="top"
        android:textColorHint="@color/pretinho"
        android:textSize="16sp"
        android:layout_marginTop="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloVisualizar" />

    <Button
        android:id="@+id/btnExcluirTarefa"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_excluir"
        android:text="@string/excluir_tarefa"
        android:textAllCaps="false"
        android:textColor="@color/botao"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConteudoVisualizar" />


